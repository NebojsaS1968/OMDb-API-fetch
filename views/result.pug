extends layout

block content
        .result-component
            .title-rating
                h2.title #{title} (#{year})
                img.camera(src="../images/camera.png", alt="")
                h3.rating &#9733; #{rating} (#{votes})
            br    
            hr
            .poster
                img.poster(src="" + poster, alt="" + title, width="300", height="400")
            br
            br
            .imdb
                button(type="button") 
                    a(href="https://www.imdb.com/title/" + imdbId, target="_blank") More info on IMDb
            .plot-director
                h3 Directed by: #{dir}
                br
                h3 Plot: #{plot}
